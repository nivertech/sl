%% -*- erlang -*-
%% Config file for sl-application
{deps_dir, ["deps"]}.
{deps, [
	{eapi, "1.0", {git, "git@github.com:nivertech/eapi.git", {branch, "zvi_r16_and_17_20140509"}}}
]}.
{erl_opts, [debug_info, fail_on_warning]}.
{require_otp_vsn, "R14|R15|R16|17"}.
{sub_dirs, ["src"]}.
{port_env, [
	    {"CFLAGS", "$CFLAGS -I deps/eapi/include"},
	    {"LDFLAGS", "$LDFLAGS deps/eapi/c_src/eapi_drv_lib.o"},
	    {"ERL_LDFLAGS", ""}
	   ]}.
{port_specs, [
	      {"(linux|freebsd|darwin)","priv/sl_drv.so",["c_src/*.c"]}
	     ]}.
